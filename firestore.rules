rules_version = '2';

// --- Admin Configuration ---
// This list MUST be kept in sync with the ADMIN_EMAILS array in src/hooks/use-auth.tsx
function getAdminEmails() {
  return ["gres7132@gmail.com"];
}

// --- Helper Functions ---
function isAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

function isAdmin() {
  return isAuthenticated() && request.auth.token.email in getAdminEmails();
}

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- User Profile Data ---
    // Users can read/write their own profile. Admins have full access.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // --- User Investments ---
    // A user can manage their own investments. Admins have full access.
    match /users/{userId}/investments/{investmentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // --- User Financial Stats ---
    // A user can read their own stats. Only admins can update balances.
    match /userStats/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Create is allowed for a user on signup.
      allow create: if isOwner(userId); 
      allow update: if isAdmin();
    }
    
    // --- User Payment Details ---
    // A user can manage their own payment details. Admins have full access.
    match /userPaymentDetails/{userId} {
       allow read, write: if isOwner(userId) || isAdmin();
    }

    // --- Deposit Proofs ---
    // Authenticated users can create deposit proofs. Admins can manage all of them.
    match /transactionProofs/{proofId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if isAdmin();
    }
    
    // --- Withdrawal Requests ---
    // Authenticated users can create withdrawal requests. Admins can manage all of them.
    match /withdrawalRequests/{reqId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if isAdmin();
    }

    // --- Contributor Applications ---
    // Authenticated users can apply. Admins can manage all of them.
    match /contributorApplications/{appId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }

    // --- Public, Admin-Managed Collections ---
    // Any authenticated user can read these, but only admins can write to them.
    match /silverLevelPackages/{packageId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /contributorTiers/{tierId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /commissionTiers/{tierId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }
  }
}