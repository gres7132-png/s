rules_version = '2';

// --- Admin Configuration ---
// This list MUST be kept in sync with the ADMIN_EMAILS array in src/hooks/use-auth.tsx
function getAdminEmails() {
  return ["gres7132@gmail.com"];
}

// --- Helper Functions ---
function isAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return isAuthenticated() && request.auth.uid == userId;
}

function isAdmin() {
  // Check for authentication and if the user's email is in the admin list.
  return isAuthenticated() && request.auth.token.email in getAdminEmails();
}

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Admin-Managed Global Configs ---
    // Anyone can read, only admins can write.
    match /silverLevelPackages/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /contributorTiers/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /commissionTiers/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- User-Specific Data ---

    // Admins have universal read/write access to all user subcollections and documents.
    // Users have specific permissions for their own documents.
    match /users/{userId} {
      allow read, write: if isAdmin(); // Admins can read/write any user document.
      allow read, create, update: if isOwner(userId); // Users can manage their own profile.
      
      match /investments/{docId} {
        allow read, write: if isAdmin() || isOwner(userId); // Admins and owners can manage investments.
      }
    }
    
    match /userStats/{userId} {
      allow read, write: if isAdmin(); // Admins have full control over stats.
      allow read: if isOwner(userId); // Users can read their own stats.
      allow create: if isOwner(userId); // Users can create their stats doc on signup.
    }
    
    match /userPaymentDetails/{userId} {
       allow read, write: if isAdmin() || isOwner(userId); // Admins and owners can manage payment details.
    }

    // --- Transactional Data (Pending Approvals etc.) ---

    match /transactionProofs/{proofId} {
        allow read, write: if isAdmin(); // Admins have full control to approve/reject.
        allow create: if isAuthenticated(); // Authenticated users can submit a deposit proof.
    }
    
    match /withdrawalRequests/{reqId} {
        allow read, write: if isAdmin(); // Admins have full control to approve/reject.
        allow create: if isAuthenticated(); // Authenticated users can request a withdrawal.
    }

    // --- Contributor Applications (Pending Admin Review) ---
    match /contributorApplications/{appId} {
        allow read, write: if isAdmin(); // Admins have full control to approve/reject.
        allow create: if isAuthenticated(); // Authenticated users can apply.
    }
  }
}
