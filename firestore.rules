rules_version = '2';

// --- Admin Configuration ---
// This list MUST be kept in sync with the ADMIN_EMAILS array in src/hooks/use-auth.tsx
function getAdminEmails() {
  return ["gres7132@gmail.com"];
}

// --- Helper Functions ---
function isAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

function isAdmin() {
  return isAuthenticated() && request.auth.token.email in getAdminEmails();
}

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- User Data ---
    // A user can read/write their own data.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // A user can manage their own investments subcollection.
    match /users/{userId}/investments/{docId} {
       allow read, write: if isOwner(userId);
    }
    
    // --- User Stats ---
    // Users can create on sign-up and read their own stats. Only Admins can update.
    match /userStats/{userId} {
      allow read, create: if isOwner(userId);
      allow update: if isAdmin();
    }
    
    // --- User Payment Details ---
    // A user can manage their own payment details.
    match /userPaymentDetails/{userId} {
       allow read, write: if isOwner(userId);
    }

    // --- Investment, Contributor, and Commission Tiers (Publicly Readable, Admin Writable) ---
    // Any authenticated user can read these configurations.
    // Only an admin can create, update, or delete them.
    match /silverLevelPackages/{packageId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /contributorTiers/{tierId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /commissionTiers/{tierId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }

    // --- Transaction Proofs & Withdrawal Requests (User Create, Admin Manage) ---
    // Any authenticated user can create a deposit or withdrawal request.
    // Only an admin can read, update, or delete them.
    match /transactionProofs/{proofId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if isAdmin();
    }
    
    match /withdrawalRequests/{reqId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if isAdmin();
    }
  }
}
