
rules_version = '2';

// --- Admin Configuration ---
// This list MUST be kept in sync with the ADMIN_EMAILS array in src/hooks/use-auth.tsx
function getAdminEmails() {
  return ["gres7132@gmail.com"];
}

// --- Helper Functions ---
function isAuthenticated() {
  return request.auth != null;
}

function isOwner(userId) {
  return request.auth.uid == userId;
}

// Checks if the requesting user's email is in the admin list.
function isAdmin() {
  return isAuthenticated() && request.auth.token.email in getAdminEmails();
}

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- User Data ---
    // Users can read/write their own document. Admins can read any user document.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // --- User-Specific Subcollections ---
    match /users/{userId}/{collectionId}/{docId} {
       // Users can manage their own subcollections (investments, referrals).
       // Admins can read these subcollections for verification.
       allow read, write: if isOwner(userId);
       allow read: if isAdmin();
    }
    
    // --- User Stats ---
    // Users can read their own stats.
    // Admins can read any user's stats and, crucially, can WRITE to them to update balances.
    // The backend function (which runs as admin) also needs write access.
    match /userStats/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin(); // Admin can update balances.
    }
    
    // --- User Payment Details ---
    // Only the user can create, read, and update their own sensitive payment details.
    // Not even admins can read this directly from the client for security.
    match /userPaymentDetails/{userId} {
       allow read, write: if isOwner(userId);
    }

    // --- Investment Packages (Publicly readable, Admin writable) ---
    match /silverLevelPackages/{packageId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- Distributor Tiers (Publicly readable, Admin writable) ---
    match /distributorTiers/{tierId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // --- Commission Tiers (Publicly readable, Admin writable) ---
    match /commissionTiers/{tierId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }

    // --- Transaction Proofs (Deposits) ---
    // Users can create their own deposit proofs.
    // Admins can read all proofs and, crucially, can WRITE (update) the status.
    match /transactionProofs/{proofId} {
        allow read: if isAdmin();
        allow create: if isAuthenticated();
        allow update: if isAdmin(); // Allows admin to change status to 'approved'/'rejected'
    }
    
    // --- Withdrawal Requests ---
    // Users can create their own withdrawal requests.
    // Admins can read all requests and, crucially, can WRITE (update) the status.
    match /withdrawalRequests/{reqId} {
        allow read: if isAdmin();
        allow create: if isAuthenticated();
        allow update: if isAdmin(); // Allows admin to change status to 'approved'/'rejected'
    }
  }
}
